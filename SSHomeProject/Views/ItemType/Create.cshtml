@using SSHomeProject.Helpers;
@using SSHomeCommon.Helpers;
@using SSHomeCommon.Constants;
@using SSHomeProject.Models;
@using SSHomeCommon.Enums;

@model ItemTypeMasterViewModel

@{
    ViewBag.Title = "Create Item Type";
}

<fieldset>
    @using (Html.BeginForm(CommonConstant.ActionItemTypeCreate, CommonConstant.ControllerItemType, new { role = "form", enctype = "multipart/form-data", id = "frmCreateItemType" }))
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()

        <div class="container-fluid" style="margin-top:50px;">
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Name)
                    @Html.TextBoxFor(model => model.Name, new { @placeholder = "Enter Item Type" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="text-center form-group">
            <input type="submit" value="Create" />
        </div>
    }
</fieldset>

